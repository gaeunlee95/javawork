package lotto;

public class LottoTest {

	public static void main(String[] args) {
		// 로또 번호 생성기
		// 1~45 -> 6개 생성
		// 배열의 크기 6개인 lotto 선언
		int[] lotto = new int[6];
		
		//6개를 동시에 생성
		for(int i=0; i < lotto.length; i++) {
			lotto[i] = (int)(Math.random()*45 + 1);
		}
		
		/*for(int i=0; i<=6; i++) {
			lotto[i] = (int)(Math.random()*45 + 1);
			System.out.println(lotto[i]);
		}*/
		
		//6개 출럭
		for(int i=0; i < lotto.length; i++ ) {
			lotto[i] = (int)(Nath.random()*45 + 1);
		}
	}

}
